    <style>
        h1,h2 {text-align: center;}
        form {text-align: center;}
        
  h1,h2 {
    background-color: #d5f4e6;
  }
  
      </style>
</head>
<body>

  
  <a href="/users/logout" class='btnn btn-secondary btn-sm pull-right' role="button" style="float:right;margin-top:20px;">
    <span class="glyphicon glyphicon-log-out"></span>logout</a>

<br>


    <h1 style="margin-top:40px;">My Profile</h1>


   
    <form action="/users/std/<%=user._id%>?_method=PATCH" method="POST">
        <i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
        <label for="name"> Name     :</label>
         <input  style="margin-left:52px" id="name" name="name" type="text"  maxlenght ="40"  size="40" value="<%=user.name%>"disabled >
         <div style="display: inline;">
          <button type="button"  onclick="toggle1()">
            <i style="font-size: 20px;" class="fa fa-edit" aria-hidden="true"></i>
         </button>
        </div>
            <br><br>


        <i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
        <label for="Email">Email    :</label>
        <input  style="margin-left:53px" type="text" value="<%=user.email%>" id="Email" name="email"  size="40" disabled>
        <div style="display: inline;">
          <button type="button" onclick="toggle2()">
            <i style="font-size: 20px;" class="fa fa-edit" aria-hidden="true"></i>
         </button>
        </div>
        <br><br>
          

        <i class="fa fa-phone fa-lg fa-fw" aria-hidden="true"></i>
        <label for="phone_no">Phone No. :</label>
        <input  style="margin-left:20px" type="text" value="<%=user.phone_no%>" id="phone_no" name="phone_no"  size="40" disabled>
        <div style="display: inline;">
          <button type="button" onclick="toggle3()">
            <i style="font-size: 20px;" class="fa fa-edit" aria-hidden="true"></i>
         </button>
        </div>
        <br><br>
        
           
        <i class="fa fa-address-book fa-lg fa-fw" aria-hidden="true"></i>
        <label for="address">Address  :</label>
         <input  style="margin-left:30px" id="address" name="address"   type="text"  size="40" value="<%=user.address%>" disabled >
         <div style="display: inline;">
          <button type="button" onclick="toggle4()">
            <i style="font-size: 20px;" class="fa fa-edit" aria-hidden="true"></i>
         </button>
        </div>
         <br><br>
        
            <button type="submit" class="btn btn-primary">Update</button><br><br>
      
    </form>
    
    
    <h2>Change Your Password ></h2>
    <form action= "/users/std/<%=user._id%>/edit" method = "POST" >
      <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
      <label for="oldpassword"> Old Password:</label>
      <input type="text" id="oldpassword" name="oldpassword"  size="40" ><br><br>



      <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
      <label for="newpassword">New Password:</label>
      <input type="password" id="newpassword" name="newpassword"  size="40"><br><br>


      <i class="fa fa-lock fa-lg fa-fw" aria-hidden="true"></i>
      <label for="confirmpassword">Confirm Password:</label>
      <input type="password" id="confirmpassword" name="confirmpassword"  size="40" ><br><br>
      <button type="submit" class="btn btn-primary" >Submit  </button> 
     </form>

                  
<script>
  function toggle1() 
 {
     document.getElementById("name").disabled=false;
     return;
 }
 function toggle2() 
 {
   document.getElementById("Email").disabled=false;
   return;
 }
 function toggle3() 
 {
    document.getElementById("phone_no").disabled =false;
    return;
 }
 function toggle4() 
 {
   document.getElementById("address").disabled = false;
   return;
 }
 
 </script>  

    
</body>
