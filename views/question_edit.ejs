<%- include ("./partials/messages") %>
<body>
     
    
       
    <h3>Edit question for <%=exam.name%></h3>
    <form action="/question/update/<%=questionid%>/<%=exam.id%>" method="POST">
        <h3>#questions</h3>
        
        <textarea id="questionName"  name="questionName" rows="4" cols="50"> <%=question.questionName%></textarea>
        <h3>select option</h3>
