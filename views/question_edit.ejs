        <input type="text" id="option3" value="<%=question.option3%>" name="option3" ><br>
        <label for="option4">option4</label>
        <input type="text" id="option4" value="<%=question.option4%>" name="option4" ><br>
        
        <h4>correct option</h4> <select name="correctOption"  id="correctOption">
